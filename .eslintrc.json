{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "react/prop-types": 0,
    "no-console": 1,
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1
  },
  "plugins": ["react", "import", "jsx-a11y", "react-hooks"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018, // Pode usar async/await
    "sourceType": "module", // Pode usar import/export
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true, // async/await
    "browser": true, // setTimeout and document and window
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
